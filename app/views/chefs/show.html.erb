<%= render 'shared/page_title', title: "#{@chef.chefname}'s profile" %>
<div class="row">
  <div class="col-md-4 col-md-offset-5 center">
    <%= gravatar_for @chef, size: 150 %>
  </div>
</div>
<hr>
<% if @chef.recipes.count != 0 %>
    <h4 align="center"><%= @chef.chefname %>'s recipes</h4>
    <div class="text-center">
      <%= will_paginate @chef_recipes %>
    </div>
    <%= render 'recipes/recipe', obj: @chef.recipes %>
    <div class="text-center">
      <%= will_paginate @chef_recipes %>
    </div>
<% else %>
    <h3 class="text-center"><%= "#{@chef.chefname} has no recipes yet" %></h3>
<% end %>